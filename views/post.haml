.post
  %h1
    %a{:href => post.url}= post.title
  .header
    .author By Jon
    .date #{post.date.strftime('%d %b %Y')}
    .comment-link
      %a{:href => '#disqus_thread'} Comments
  .text
    :liquidmarkdown
      #{post.content}
  .footer
    %p
      =haml :comment_thread, :locals => {:post => post}